{
  "extends": "../typescript/tsconfig.base.json",
  "compilerOptions": {
    "target": "ES5",
    "module": "none",
    "outFile": "./dist/library_napi.js",
    "importHelpers": false,
    "noEmitHelpers": true,
    "types": [],
    "lib": [
      "ES5",
      "ES2015",
      "ES2020.BigInt",
      "ES2021.WeakRef",
      "DOM"
    ],
    "plugins": [
      {
        "transform": "../typescript/define-transformer.js",
        "defines": {
          "NULL": 0
        }
      }
    ]
  },
  "include": [
    "../runtime/dist/library_napi_runtime.d.ts",
    "../runtime/src/typings/**/*.d.ts",
    "./src/**/*.ts"
  ]
}
