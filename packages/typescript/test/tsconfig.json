{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES5",
    "plugins": [
      {
        "transform": "../define-transformer.js",
        "defines": {
          "NULL": 0
        }
      },
      {
        "transform": "../pure-class-transformer.js",
        "after": true
      }
    ]
  },
  "include": [
    "./**/*.ts"
  ]
}
